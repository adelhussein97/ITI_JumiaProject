@page
@using System.Globalization;
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

@{
    var isrtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}


<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <h3 class=" @(isrtl?"text-start":"text-end")">@localizer["manageemail"]</h3>
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating mb-3 input-group">
                    <input asp-for="Email" class="form-control  @(isrtl?"text-end":"text-start")" placeholder="Please enter your email." disabled />
                        <div class="input-group-append">
                            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                        </div>
                    <label class="form-label">@localizer["email"]</label>
                </div>
            }
            else
            {
                <div class="form-floating mb-3">
                    <label class="form-label">@localizer["email"]</label>
                    <input asp-for="Email" class="form-control @(isrtl?"text-end":"text-start")" placeholder="Please enter your email." disabled />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">@localizer["sendverificationemail"]</button>
                </div>
            }
            <div class="form-floating mb-3">
                <label class="form-label">@localizer["newemail"]</label>
                <input asp-for="Input.NewEmail" class="form-control @(isrtl?"text-end":"text-start")" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-primary">@localizer["changeemail"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
